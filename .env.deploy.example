# ===============================================
# CONFIGURATION DÉPLOIEMENT - SHORTLINK
# ===============================================
# Copier ce fichier en .env et adapter les valeurs

# === DOMAINE ===
DOMAIN=kut.es
NEXTAUTH_URL=https://kut.es
NEXT_PUBLIC_BASE_URL=https://kut.es

# === BASE DE DONNÉES POSTGRESQL EXISTANTE ===
# Adapter selon votre conteneur PostgreSQL existant
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL=postgresql://kutes:VOTRE_MOT_DE_PASSE@host.docker.internal:5432/kutes_prod?schema=public
DB_PASSWORD=VOTRE_MOT_DE_PASSE

# === SECRETS (générer avec: openssl rand -base64 32) ===
NEXTAUTH_SECRET=
JWT_SECRET=
HASH_SECRET=

# === EMAIL SMTP ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre-email@gmail.com
SMTP_PASS=votre-app-password
EMAIL_FROM="ShortLink <votre-email@gmail.com>"

# === PAIEMENTS S3P (optionnel) ===
S3P_BASE_URL=https://s3p.smobilpay.staging.maviance.info/v2
S3P_ACCESS_TOKEN=
S3P_ACCESS_SECRET=
S3P_SERVICE_ID=1

# === PAIEMENTS E-NKAP (optionnel) ===
ENKAP_CONSUMER_KEY=
ENKAP_CONSUMER_SECRET=
ENKAP_TOKEN_URL=https://api.enkap-staging.maviance.info/token
ENKAP_API_BASE_URL=https://api.enkap-staging.maviance.info/purchase/v1.2/api

# === RATE LIMITING ===
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100
